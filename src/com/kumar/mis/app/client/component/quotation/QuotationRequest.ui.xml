<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	
	</ui:style>


	<g:HTMLPanel>

		<div class="panel panel-primary">
			<div class="panel-heading">Parts Form</div>
			<div class="panel-body">
				<div class="form">

					<div class="form-group">
						<label for="exampleInputPassword1">Customer Name</label>
						<g:ListBox styleName="form-control" ui:field="lstCustomerName">
						</g:ListBox>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Description </label>
						<g:TextArea styleName="form-control" ui:field="txtDescription"
							visibleLines="10"></g:TextArea>
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Request Date </label>
						<g:VerticalPanel ui:field="requestDatePanel"></g:VerticalPanel>
					</div>

					<div class="form-group">
						<label for="exampleInputPassword1">Release Date </label>
						<g:VerticalPanel ui:field="releaseDatePanel"></g:VerticalPanel>

					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Requested Mode </label>
						<g:ListBox styleName="form-control" ui:field="lstRequestMode">
						</g:ListBox>
					</div>
					<g:Button ui:field="btnAddRequest" styleName="btn btn-primary">Add Request</g:Button>
					<g:Button ui:field="btnClear" styleName="btn btn-default">Clear</g:Button>

				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder> 